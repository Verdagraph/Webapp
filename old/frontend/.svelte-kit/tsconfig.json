{
	"compilerOptions": {
		"paths": {
			"$data": ["../src/lib/data"],
			"$data/*": ["../src/lib/data/*"],
			"$codegen": ["../src/lib/codegen"],
			"$codegen/*": ["../src/lib/codegen/*"],
			"$state": ["../src/lib/state"],
			"$state/*": ["../src/lib/state/*"],
			"$components": ["../src/lib/components"],
			"$components/*": ["../src/lib/components/*"],
			"$lib": ["../src/lib"],
			"$lib/*": ["../src/lib/*"]
		},
		"rootDirs": ["..", "./types"],
		"verbatimModuleSyntax": true,
		"isolatedModules": true,
		"lib": ["esnext", "DOM", "DOM.Iterable"],
		"moduleResolution": "bundler",
		"module": "esnext",
		"noEmit": true,
		"target": "esnext"
	},
	"include": [
		"ambient.d.ts",
		"non-ambient.d.ts",
		"./types/**/$types.d.ts",
		"../vite.config.js",
		"../vite.config.ts",
		"../src/**/*.js",
		"../src/**/*.ts",
		"../src/**/*.svelte",
		"../tests/**/*.js",
		"../tests/**/*.ts",
		"../tests/**/*.svelte"
	],
	"exclude": [
		"../node_modules/**",
		"../src/service-worker.js",
		"../src/service-worker.ts",
		"../src/service-worker.d.ts"
	]
}
